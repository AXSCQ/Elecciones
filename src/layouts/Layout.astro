---
// Props para personalizar el título de la página
interface Props {
	title?: string;
}

const { title = "Elecciones Bolivia 2025" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: 'Arial', sans-serif;
		overflow-x: hidden;
	}

	.container {
		background-image: url('/Fondos/Palacio.png');
		background-size: cover;
		background-position: center top;
		background-repeat: no-repeat;
		background-attachment: fixed;
		min-height: 100vh;
		width: 100%;
		position: relative;
		overflow-x: hidden;
		display: flex;
		flex-direction: column;
	}

	/* Overlay para mejorar la legibilidad del contenido */
	.container::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.3); /* Overlay ligeramente más transparente */
		z-index: 0;
	}

	/* Asegurarnos de que el contenido esté por encima del overlay */
	.container > * {
		position: relative;
		z-index: 1;
	}
</style>
